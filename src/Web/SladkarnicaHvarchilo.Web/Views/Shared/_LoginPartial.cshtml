@using SladkarnicaHvarchilo.Common
@using SladkarnicaHvarchilo.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navBarLoginSection">
    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
                <button type="submit" class="nav-link btn btn-link text-light"><i class="fa-solid fa-right-from-bracket"></i></button>
            </form>
        </li>
    }
    else
    {
@*        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
        </li>*@
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-right-to-bracket"></i></a>
        </li>
    }
</ul>
