@page
@model RegisterModel
@{
	ViewData["Title"] = "Регистрирай се";
}

<h1 class="text-center"><strong>@ViewData["Title"]</strong></h1>
<div class="container" style="width: 60%; backdrop-filter: blur(10px); border: 2px solid; border-color: white; border-radius: 15px">
	<div class="col-md-8 mx-auto">
		<section>
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<h2 class="text-center mt-3"><i>Създай нов акаунт</i></h2>
				<div class="form-floating mt-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="Въведете имейл" aria-required="true" />
					<label asp-for="Input.Email">Въведете имейл</label>
					<span asp-validation-for="Input.Email" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.Password" class="form-control" autocomplete="Въведете парола си" aria-required="true" />
					<label asp-for="Input.Password">Въведете парола си</label>
					<span asp-validation-for="Input.Password" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="Повторете паролата си" aria-required="true" />
					<label asp-for="Input.ConfirmPassword">Повторете паролата си</label>
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div>
					<button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-success mt-3 mb-3" style="color: white">Регистрирай се</button>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}