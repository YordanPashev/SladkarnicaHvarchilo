@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container text-center" style="width: 60%; background: rgba(71, 90, 54, 0.7); backdrop-filter: blur(10px); border: 2px solid; border-color: white; border-radius: 15px">
    <div class="col-md-8 mx-auto mt-3">
        <section>
            <form id="account" method="post">
                <h2 style="text-align: center; color: white"><i>Влезте в акаунта си</i></h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="Въведете имейл" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Въведете имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="Въведете парола" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Въведете парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label" style="color: white">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Запомни ме?
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Влез</button>
                </div>
                <div>
                    <p>
                        <a class="w-100 btn btn-lg btn-primary mt-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай се</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
